<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".conv.ConvertorActivity">

    <TextView
        android:id="@+id/input_inch"
        android:layout_width="110dp"
        android:layout_height="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <TextView
        android:id="@+id/input_foot"
        android:layout_width="110dp"
        android:layout_height="20dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/input_inch" />

    <TextView
        android:id="@+id/input_meel"
        android:layout_width="110dp"
        android:layout_height="20dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/input_meters" />

    <EditText
        android:id="@+id/input_content"
        android:layout_width="360dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="30dp"
        android:text="Метры:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="60dp"
        android:text="Мили:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="Дюймы:"
        app:layout_constraintStart_toEndOf="@+id/input_meters"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:text="Футы:"
        app:layout_constraintStart_toEndOf="@+id/input_meel"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/input_meters"
        android:layout_width="110dp"
        android:layout_height="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="372dp"
        android:layout_height="129dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_content">

        <RadioButton
            android:id="@+id/rbtn_meters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Метры" />

        <RadioButton
            android:id="@+id/rbtn_meel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Мили" />

        <RadioButton
            android:id="@+id/rbtn_inch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Дюймы" />

        <RadioButton
            android:id="@+id/rbtn_foot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Футы" />
    </RadioGroup>

</android.support.constraint.ConstraintLayout>